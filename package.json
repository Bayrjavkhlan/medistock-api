{
  "name": "medistock-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/app.js",
    "prisma:generate": "yarn prisma generate && yarn prisma format && yarn prisma validate",
    "prisma:migration": "yarn prisma:generate && yarn prisma migrate dev --create-only",
    "prisma:migrate": "yarn prisma:generate && yarn prisma migrate dev",
    "prisma:seed": "ts-node --transpile-only -r tsconfig-paths/register prisma/seed/index.ts",
    "type:check": "tsc --noEmit"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@as-integrations/express5": "^1.1.2",
    "@faker-js/faker": "^10.1.0",
    "@prisma/client": "5.18.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "graphql-scalars": "^1.25.0",
    "http": "^0.0.1-security",
    "nexus": "^1.3.0",
    "nexus-prisma": "2.0.8",
    "nodemon": "^3.1.10"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/faker": "^6.6.11",
    "@types/node": "^24.9.1",
    "prisma": "5.18.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules",
      "dist",
      "*.test.ts"
    ],
    "watch": [
      "./src"
    ],
    "exec": "ts-node --transpile-only -r tsconfig-paths/register src/app.ts",
    "ext": "ts"
  }
}
