{
  "name": "medistock-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/app.js",
    "prisma:generate": "yarn prisma generate && yarn prisma format && yarn prisma validate",
    "prisma:migration": "yarn prisma:generate && yarn prisma migrate dev --create-only",
    "prisma:migrate": "yarn prisma:generate && yarn prisma migrate dev",
    "prisma:seed": "ts-node --transpile-only -r tsconfig-paths/register prisma/seed/index.ts",
    "type:check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json}'",
    "generate:nexus": "ts-node --transpile-only -r tsconfig-paths/register src/graphql/schema.ts"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@as-integrations/express5": "^1.1.2",
    "@casl/ability": "^6.7.3",
    "@casl/prisma": "^1.5.2",
    "@faker-js/faker": "^10.1.0",
    "@prisma/client": "5.18.0",
    "@types/uuid": "^11.0.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "graphql-middleware": "^6.1.35",
    "graphql-rate-limit": "^3.3.0",
    "graphql-scalars": "^1.25.0",
    "graphql-shield": "^7.6.5",
    "helmet": "^8.1.0",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "nexus": "^1.3.0",
    "nexus-prisma": "2.0.8",
    "nodemon": "^3.1.10",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/faker": "^6.6.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prisma": "5.18.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules",
      "dist",
      "*.test.ts"
    ],
    "watch": [
      "./src"
    ],
    "exec": "ts-node --transpile-only -r tsconfig-paths/register src/app.ts",
    "ext": "ts"
  }
}
