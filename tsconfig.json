{
  "compilerOptions": {
    /* === Project structure === */
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "lib/*": ["./src/lib/*"]
    },
    /* === Language and module settings === */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    /* === Type definitions === */
    "types": ["node", "express"],

    /* === Type checking === */
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    /* === Output and debugging === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*", "commitlint.config.ts", "src/types/express.d.ts"],
  "exclude": ["node_modules", "dist", "commitlint.config.ts"]
}
